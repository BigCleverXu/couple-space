		</view>
	</x-card>

	<view class="body">
		<t-cell leftIcon="user-setting" title="个人设置" hover arrow url="/pages/setting/user/index" />
		<t-cell leftIcon="setting-1" title="系统设置" hover arrow url="/pages/setting/system/index" />
	</view>
