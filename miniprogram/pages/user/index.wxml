				<view class="nickname">
					<text>二狗子</text>
					<t-tag theme="primary" variant="light">左</t-tag>
				</view>
				<text class="tip">遇见你是我最好的选择</text>
			</view>
		</view>
		<view class="no-setting" wx:else>
			<t-avatar />
